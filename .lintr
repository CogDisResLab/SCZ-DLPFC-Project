linters: linters_with_tags(
    tags = c(
            "best_practices",
            "common_mistakes",
            "configurable",
            "consistency",
            "correctness",
            "efficiency",
            "executing",
            "readability",
            "robustness",
            "style"
            ),
    assignment_linter(
        allow_cascading_assign = FALSE,
        allow_trailing = FALSE
    ),
    backport_linter(
        r_version = "4.0.0"
    ),
    indentation_linter(
        indent = 2L,
        hanging_indent_style = c("tidy"),
        assignment_as_infix = TRUE
    ),
    library_call_linter(allow_preamble = FALSE),
    line_length_linter(120),
    object_length_linter(50L),
    object_name_linter(
        styles = c("snake_case", "symbols", "camelCase")
    ),
    pipe_consistency_linter(pipe = c("|>")),
    undesirable_function_linter(
      modify_defaults(
        defaults = default_undesirable_functions,
        library = NULL
      )
    ),
    commented_code_linter = NULL,
    object_usage_linter = NULL,
    unnecessary_lambda_linter = NULL
  )
exclusions: list(
    "renv",
    ".Rprofile"
  )
encoding: "UTF-8"
